<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatapp.LoginViewController">
    <Label text="Please enter your username" />
    <TextField fx:id="loginTextField" promptText="Username" />
    <Button text="Send" onAction="#loginIntoChat"/>
    <Label fx:id="messageLabel" />
</VBox>
